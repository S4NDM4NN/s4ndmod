{ 
     noPicmip 
     surfaceparm trans 
     { 
          map textures/sfx/construction.tga
          blendFunc GL_SRC_ALPHA GL_ONE
          rgbgen const ( 0.35 0.0 0.0 )
          tcMod scroll 0.025 0.025 
